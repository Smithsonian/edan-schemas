{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"additionalProperties":false,
	"properties": {
		"id": {
			"type": "string",
			"id": "http://edan.si.edu/schema/core/id"
		},
		"title": {
			"type": "string",
			"id": "http://edan.si.edu/schema/core/title"
		},
		"unitCode": {
			"type": "string",
			"id": "http://edan.si.edu/schema/core/unitCode"
		},
		"linkedId": {
			"type": "string",
			"id": "http://edan.si.edu/schema/core/linkedId"
		},
		"type": {
			"type": "string",
			"id": "http://edan.si.edu/schema/core/type"
		},
		"url": {
			"type": "string",
			"id": "http://edan.si.edu/schema/core/url"
		},
		"content": {
			"type": "object",
			"properties": {},
			"id": "http://edan.si.edu/schema/core/content"
		},
		"hash": {
			"type": "string",
			"id": "http://edan.si.edu/schema/core/hash",
			"pattern": "^[a-f0-9]{40}$"
