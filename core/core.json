		"status": {
			"type": "integer",
			"id": "http://edan.si.edu/schema/core/status"
		},
		"version": {
			"type": "string",
			"id": "http://edan.si.edu/schema/core/version"
		},
		"publicSearch": {
			"type": "boolean",
			"id": "http://edan.si.edu/schema/core/publicSearch"
		},
		"linkedContent": {
			"type": "array",
			"items": {},
			"id": "http://edan.si.edu/schema/core/linkedContent"
		}
	},
	"id": "http://edan.si.edu/schema/core",
	"required": [
		"id",
		"title",
		"unitCode",
		"type",
		"url",
		"content",
		"hash",
		"docSignature",
		"timestamp",
		"lastTimeUpdated",
		"status",
		"version",
		"publicSearch"
