{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"title": "Schema that supports list of things"
	"required": [
		"thumbnail",
		"size",
		"description",
		"listName",
		"items"
	],
	"additionalProperties": false,
	"properties": {
		"description": {
			"type": "string",
			"$id": "https://edan.si.edu/schema/content/properties/description"
		},
		"items": {
			"type": "array",
			"$id": "https://edan.si.edu/schema/content/properties/items",
			"items": {
				"type": "string"
			}
		},
		"listName": {
			"type": "string",
			"$id": "https://edan.si.edu/schema/content/properties/listName"
		},
		"size": {
			"type": "integer",			
			"minSize": 0,
			"$id": "https://edan.si.edu/schema/content/properties/size"
		},
		"thumbnail": {
			"type": "string",
			"$id": "https://edan.si.edu/schema/content/properties/thumbnail"
		}
	},
	"$id": "https://edan.si.edu/schema/content"
}