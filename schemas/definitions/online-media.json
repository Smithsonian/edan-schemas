{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"definitions": {
		"onlineMedia": {
			"title": "Online Media (DRAFT)",
			"description": "Object that stores all media within a record.",
			"type": "object",
			"required": [],
			"properties": {
				"media": {
					"type": "array",
					"items": {
						"type": "object",
						"oneOf": [{
							"$ref": "media-element.json#/definitions/edanMediaElement"
						}],
						"preferred": "string"
					}
				}
			}
		},
		"online_media": {
			"type": ["object"],
			"properties": {
				"mediaCount": {
					"type": "string"
				},
				"media": {
					"type": ["object", "array"],
					"properties": {
						"content": {
							"type": "string"
						},
						"thumbnail": {
							"type": "string"
						},
						"type": {
							"type": "string"
						}
					},
					"required": [
						"content",
						"thumbnail",
						"type"
					]
				}
			},
			"required": [
				"mediaCount",
				"media"
			]
		}
	}


}