{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "SI Unit Record (DRAFT)",
  "description": "Units are used to describe Smithsonian units",
  "required": [
    "title"
  ],
  "properties": {
    "record_link": {
      "type": "string",
      "description": "Link to the unit's primary website."
    },
    "parent_unit_ID": {
      "type": "string",
      "description": "The ID of the parent unit, if applicable."
    },
    "objectgroup_ID": {
      "type": "string",
      "description": "The ID of the related object group, if applicable."
    },
    "online_media": {
      "type": "object",
      "description": "EDAN online media object",
      "$ref": "online-media.json#/onlineMedia"
    },
    "title": {
      "type": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "address": {
      "type": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "telephone": {
      "type": "object",
      "description": "EDAN field array object",
      "$ref": "field-object.json#/fieldObject"
    },
    "fax": {
      "type": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "name": {
      "type": "array",
      "items": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "topic": {
      "type": "array",
      "items": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "culture": {
      "type": "array",
      "items": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "language": {
      "type": "array",
      "items": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "place": {
      "type": "array",
      "items": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "category": {
      "type": "array",
      "items": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "description": {
      "type": "string",
      "items": "Description of the event."
    },
    "summary": {
      "type": "string",
      "items": "Short description of the event."
    },
    "email": {
      "type": "string",
      "description": ""
    },
    "notes": {
      "type": "object",
      "items": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "data_source": {
      "type": "object",
      "items": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "usage_flag": {
      "type": "object",
      "description": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    },
    "set_name": {
      "type": "object",
      "items": "EDAN field object",
      "$ref": "field-object.json#/fieldObject"
    }
  }
}
